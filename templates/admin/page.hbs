<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="not-ie"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->
        <title>Admin</title>
        <meta name="viewport" content="width=device-width">
        {{#css}}admin/admin.css{{/css}}
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
        <base href="/">
    </head>
    <body>
        <header>
            <h1><a href='/admin'>Admin{{#if title}} - {{title}}{{/if}}</a></h1>
            {{#if email}}
                {{#if isAdmin}}
                    <a class='sites' href='/admin/sites'>Sites</a></h1>
                    <a class='sites' href='/admin/users'>Users</a></h1>
                {{/if}}
                <a class='signout'>Sign out</a>
                <span class="loggedInAs">Logged in as {{email}}</span>
            {{/if}}
        </header>

        {{& content}}

        {{# debug}}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.js"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular.js"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular-resource.js"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular-route.js"></script>
        {{else}}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular.min.js"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular-resource.min.js"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular-route.min.js"></script>
        {{/debug}}

        <script src="https://login.persona.org/include.js"></script>
        {{#if enableLogin}}
            <script type="text/javascript">
                window.loggedIn = {{#if email}}"{{email}}"{{else}}null{{/if}};
            </script>
        {{/if}}
        {{#js}}admin/admin.js,admin/data.js{{/js}}
    </body>
</html>

